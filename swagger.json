{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "MC Pay Personal Finance",
    "description": "Personal Finance for Personal Use",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3010",
  "basePath": "/",
  "tags": [
    {
      "name": "Personal Finance",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "Create User",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/UserAdd"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User berhasil di insert",
            "schema": {
              "$ref": "#/definitions/UserAdd"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Users"
        ],
        "description": "Update user in system",
        "parameters": [
          {
            "name": "Update User",
            "in": "body",
            "description": "User that we want to update",
            "schema": {
              "$ref": "#/definitions/UserEdit"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Update User Berhasil",
            "schema": {
              "$ref": "#/definitions/UserEdit"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "AUTH"
        ],
        "description": "Please login with your username and password",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to login",
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login Success",
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        }
      }
    }

  },
  "definitions": {
    "User": {
      "required": [
        "name",
        "username",
        "password"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserAdd": {
      "required": [
        "name",
        "username",
        "password",
        "password_confirmation",
        "balance"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "password_confirmation": {
          "type": "string"
        },
        "balance": {
          "type": "integer"
        }
      }
    },
    "UserEdit": {
      "required": [
        "id",
        "name",
        "username",
        "password"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserLogin": {
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
